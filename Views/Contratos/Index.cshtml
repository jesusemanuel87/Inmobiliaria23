@model IEnumerable<Inmobiliaria23.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
    var Inquilino = ViewBag.Inquilino;
}

<h1>Contratos</h1>

<a asp-action="Create" class="btn btn-success"><i class="fa-solid fa-address-card style="color: #000000;"></i>   Crear nuevo</a>
<br>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Vigentes">
            <div class="form-group">
                <label for="fechaInicio" class="control-label">Fecha inicial</label>
                <input type="date" name="fechaInicio" for="fechaInicio" class="form-control" required/>
            
                <label for="fechaFin" class="control-label">Fecha final</label>
                <input type="date" name="fechaFin" for="fechaFin" class="form-control" required/>
            </div>
            <div class="form-group">
                <input type="submit" value="Filtrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



<table class="table">
    <thead>
        <tr>
             <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                Inquilino
            </th>
            <th>
                Propietario
            </th>
            <th>
                Inmueble
            </th>
            
            <th>
                Editar | Detalle | Eliminar | Propiedades
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaInicio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaFin)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.inquilino.Nombre)
                @Html.DisplayFor(modelItem => item.inquilino.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.propietario.Nombre)
                @Html.DisplayFor(modelItem => item.propietario.Apellido)
            </td>
            <td>
                @item.inmueble.ToString()
            </td>
         
            <td>
                @Html.ActionLink("Detalle", "Details", new { id=item.Id  }, new { @class = "fa-regular fa-file-lines btn btn-info" }) |
				@Html.ActionLink("Renovar", "Renovar", new { id=item.Id }, new { @class = "fas fa-edit btn btn-primary" })   |
                @Html.ActionLink("Terminar", "Terminar", new { id=item.Id  }, new { @class = "fa-regular fa-file-lines btn btn-info" }) |
                <a href="/Pagos/Contrato/@item.Id" title="Pagos"><span class="fa-solid fa-cash-register"></span></a> |
                @if(User.IsInRole("Administrador")){  
                                @Html.ActionLink("", "Delete", new { id=item.Id },new { @class = "fas fa-remove"})
                                }            
            </td>
        </tr>
    }
    </tbody>
</table>
