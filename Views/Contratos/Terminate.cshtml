@model Inmobiliaria23.Models.Contrato

@{
    ViewData["Title"] = "Edit";
    var ltaInquilinos = (IList<Inquilino>)ViewBag.Inquilinos;
    var ltaInmuebles = (IList<Inmueble>)ViewBag.Inmuebles;
    var inquilinoActual = ViewBag.InquilinoActual;
    var inmuebleActual = ViewBag.inmuebleActual;
    var multa = ViewBag.multa;
    var deuda = ViewBag.deuda;
}

<h1>Finalizar Contrato</h1>

<h3>¿Esta usted seguro de finalizar este contrato?</h3>
<div>
    <h4>Contrato</h4>
    <hr />
    <div class="row">
    <div class="col-md-4">
        <form asp-action="Terminate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled/>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" disabled />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" disabled/>
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Precio" class="control-label"></label>
                <input asp-for="Precio" class="form-control" disabled/>
                <span asp-validation-for="Precio" class="text-danger"></span>
            </div>

            <div class="form-group">
				<dt class = "col-sm-2">
                  Inquilino
                </dt>
                <dd class = "col-sm-10">
                  @(inquilinoActual.Nombre+" "+inquilinoActual.Apellido)
                </dd>

                <dt class = "col-sm-2">
                 Inmueble
                 </dt>
                 <dd class = "col-sm-10">
                 @(inmuebleActual.ToString())
                 </dd>

                 <dt class = "col-sm-5">
                 Multa a pagar
                 </dt>
                 <dd class = "col-sm-10">
                 @if(multa==null){
                    @Model.Precio
                 }else {
                    @multa
                 }
                 </dd>

                 <dt class = "col-sm-5">
                 Deuda hasta la fecha
                 </dt>
                 <dd class = "col-sm-10">
                    @deuda
                 </dd>
			</div>
            
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}